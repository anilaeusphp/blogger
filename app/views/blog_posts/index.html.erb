<h2>Welcome to Blog Posts</h2>
<p>There are totally <%= pluralize(@blog_posts.count, "post") %> </p>
<% @blog_posts.each  do  |blog_post|%>
    <div class="text-center">
        <h4 class="text-3xl underline"><%= blog_post.title %></h4>
        <p class="mb-12 mt-4"><%= blog_post.body%> </p>
        <div class="flex flex-row justify-content-evenly gap-6 mx-auto w-[100%]">
        <div class=""><%= link_to "Edit", edit_blog_post_path(blog_post.id) %> </div>
            <div class=""> <%= button_to "Delete", blog_post_path(blog_post.id) , method: :delete %></div>
        </div>
    </div>
<% end %>